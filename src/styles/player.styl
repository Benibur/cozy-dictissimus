.player-overlay
  height          : 100%
  width           : 100%
  position        : fixed
  z-index         : 50
  background-color: white
  overflow-x      : hidden
  transition      : 0.5s
  display         : flex
  align-items     : center
  top             : 0
  flex-direction  : column

.hidden
  top: -100%

/* Position the content inside the overlay */
.player-content
  width            : 100%
  max-width        : 40rem
  flex-grow        : 1
  display          : flex
  flex-direction   : column
  position         : relative

#score
  position         : absolute
  right            : 1rem

.question
  display        : flex
  flex-direction : column
  align-items    : stretch
  padding-top    : 0.75rem

.question input
  max-width      : none
  margin-top     : 1.75rem

.player-card
  border-radius  : 6px
  border         : 1px solid #d6d8da

#stopLessonBtn
  align-self : flex-start

